_claude_install() {
  _arguments \
    '--force[Installatioun forcéieren och wann schonn installéiert]' \
    '(-h --help)'{-h,--help}'[Hëllef weisen]' \
    '::target:(stable latest)'
}
(( $+_comps[claude] )) || compdef _claude claude
