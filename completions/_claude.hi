#compdef claude

# Dynamic completion functions
_claude_mcp_servers() {
  local servers config_file
  local -a server_list

  # Read directly from config files instead of running 'claude mcp list'
  for config_file in ~/.claude/mcp.json ~/.claude.json ~/.config/claude/mcp.json; do
    [[ -f "$config_file" ]] || continue

    # Extract server names from JSON (mcpServers section)
    servers=$(grep -oP '(?<="mcpServers":\s*\{)[^}]+' "$config_file" 2>/dev/null | \
              grep -oP '(?<=")[^"]+(?="\s*:)' 2>/dev/null)

    [[ -n "$servers" ]] && server_list+=(${(f)servers})
  done

  # Fallback to claude mcp list if config parsing fails
  if [[ ${#server_list[@]} -eq 0 ]]; then
    server_list=(${(f)"$(claude mcp list 2>/dev/null | sed -n 's/^\([^:]*\):.*/\1/p' | grep -v '^Checking')"})
  fi

  compadd -l -a server_list
}

_claude_installed_plugins() {
  local -a plugins
  local config_file plugin_dir

  # Check plugin directories directly
  for plugin_dir in ~/.claude/plugins ~/.config/claude/plugins; do
    [[ -d "$plugin_dir" ]] || continue
    plugins+=(${plugin_dir}/*(N:t))
  done

  # Remove duplicates
  plugins=(${(u)plugins})

  compadd -l -a plugins
}

_claude_sessions() {
  local -a sessions
  local session_dir

  # Check session directory
  for session_dir in ~/.claude/sessions ~/.config/claude/sessions; do
    [[ -d "$session_dir" ]] || continue

    # Extract UUIDs directly from filenames
    sessions+=(${session_dir}/*~*.zwc(N:t:r))
  done

  # Filter only valid UUIDs
  sessions=(${(M)sessions:#[0-9a-f](#c8)-[0-9a-f](#c4)-[0-9a-f](#c4)-[0-9a-f](#c4)-[0-9a-f](#c12)})

  compadd -l -a sessions
}

_claude() {
  local curcontext="$curcontext" state line
  typeset -A opt_args

  local -a main_commands
  main_commands=(
    'mcp:MCP सर्वर कॉन्फ़िगर और प्रबंधित करें'
    'plugin:Claude Code प्लगइन प्रबंधित करें'
    'setup-token:दीर्घकालिक प्रमाणीकरण टोकन सेटअप करें (Claude सब्सक्रिप्शन आवश्यक)'
    'doctor:Claude Code ऑटो-अपडेटर के लिए स्वास्थ्य जांच'
    'update:अपडेट की जांच करें और इंस्टॉल करें'
    'install:Claude Code नेटिव बिल्ड इंस्टॉल करें'
  )

  local -a main_options
  main_options=(
    '(-d --debug)'{-d,--debug}'[वैकल्पिक कैटेगरी फ़िल्टरिंग के साथ डीबग मोड सक्षम करें (जैसे, "api,hooks" या "!statsig,!file")]:filter:'
    '--verbose[कॉन्फ़िग फ़ाइल से verbose मोड सेटिंग ओवरराइड करें]'
    '(-p --print)'{-p,--print}'[प्रतिक्रिया प्रिंट करें और बाहर निकलें (pipes के साथ उपयोग के लिए). नोट: केवल विश्वसनीय डायरेक्टरी में उपयोग करें]'
    '--output-format[आउटपुट फ़ॉर्मेट (--print के साथ): "text" (डिफ़ॉल्ट), "json" (एकल परिणाम), या "stream-json" (रियल-टाइम स्ट्रीमिंग)]:format:(text json stream-json)'
    '--json-schema[संरचित आउटपुट सत्यापन के लिए JSON स्कीमा]:schema:'
    '--include-partial-messages[आंशिक संदेश खंड शामिल करें जैसे ही वे पहुंचें (--print और --output-format=stream-json के साथ)]'
    '--input-format[इनपुट फ़ॉर्मेट (--print के साथ): "text" (डिफ़ॉल्ट) या "stream-json" (रियल-टाइम स्ट्रीमिंग इनपुट)]:format:(text stream-json)'
    '--mcp-debug[\[अप्रचलित. इसके बजाय --debug उपयोग करें\] MCP डीबग मोड सक्षम करें (MCP सर्वर त्रुटियां दिखाता है)]'
    '--dangerously-skip-permissions[सभी अनुमति जांच बायपास करें. केवल बिना इंटरनेट एक्सेस वाले सैंडबॉक्स के लिए अनुशंसित]'
    '--allow-dangerously-skip-permissions[डिफ़ॉल्ट रूप से सक्षम किए बिना अनुमति जांच बायपास करने का विकल्प सक्षम करें]'
    '--replay-user-messages[पुष्टि के लिए stdin से stdout पर उपयोगकर्ता संदेश पुनः भेजें]'
    '--allowed-tools[अनुमत टूल नामों की कॉमा या स्पेस-अलग सूची (जैसे, "Bash(git:*) Edit")]:tools:'
    '--allowedTools[अनुमत टूल नामों की कॉमा या स्पेस-अलग सूची (camelCase फ़ॉर्मेट)]:tools:'
    '--tools[बिल्ट-इन सेट से उपलब्ध टूल की सूची निर्दिष्ट करें. केवल print मोड]:tools:'
    '--disallowed-tools[अस्वीकृत टूल नामों की कॉमा या स्पेस-अलग सूची (जैसे, "Bash(git:*) Edit")]:tools:'
    '--disallowedTools[अस्वीकृत टूल नामों की कॉमा या स्पेस-अलग सूची (camelCase फ़ॉर्मेट)]:tools:'
    '--mcp-config[JSON फ़ाइल या स्ट्रिंग से MCP सर्वर लोड करें (स्पेस-अलग)]:configs:'
    '--system-prompt[सत्र के लिए उपयोग करने हेतु सिस्टम प्रॉम्प्ट]:prompt:'
    '--append-system-prompt[डिफ़ॉल्ट सिस्टम प्रॉम्प्ट में सिस्टम प्रॉम्प्ट जोड़ें]:prompt:'
    '--permission-mode[सत्र के लिए उपयोग करने हेतु अनुमति मोड]:mode:(acceptEdits bypassPermissions default dontAsk plan)'
    '(-c --continue)'{-c,--continue}'[सबसे हाल की वार्तालाप जारी रखें]'
    '(-r --resume)'{-r,--resume}'[वार्तालाप पुनः शुरू करें - सत्र ID निर्दिष्ट करें या इंटरैक्टिव रूप से चुनें]:sessionId:_claude_sessions'
    '--fork-session[पुनः शुरू करते समय मूल सत्र ID का पुनः उपयोग करने के बजाय नया सत्र ID बनाएं (--resume या --continue के साथ)]'
    '--model[वर्तमान सत्र के लिए मॉडल. नवीनतम मॉडल के लिए उपनाम निर्दिष्ट करें (जैसे, '\''sonnet'\'' या '\''opus'\'')]:model:'
    '--fallback-model[जब डिफ़ॉल्ट मॉडल ओवरलोड हो तो निर्दिष्ट मॉडल पर स्वचालित फॉलबैक सक्षम करें (केवल --print)]:model:'
    '--settings[अतिरिक्त सेटिंग्स लोड करने के लिए सेटिंग्स JSON फ़ाइल या JSON स्ट्रिंग का पथ]:file-or-json:_files'
    '--add-dir[टूल एक्सेस की अनुमति देने के लिए अतिरिक्त डायरेक्टरी]:directories:_directories'
    '--ide[स्टार्टअप पर IDE से ऑटो-कनेक्ट करें यदि बिल्कुल एक मान्य IDE उपलब्ध है]'
    '--strict-mcp-config[केवल --mcp-config से MCP सर्वर उपयोग करें और अन्य सभी MCP सेटिंग्स अनदेखा करें]'
    '--session-id[वार्तालाप के लिए उपयोग करने हेतु विशिष्ट सत्र ID (मान्य UUID होना चाहिए)]:uuid:'
    '--agents[कस्टम एजेंट परिभाषित करने वाला JSON ऑब्जेक्ट]:json:'
    '--setting-sources[लोड करने के लिए सेटिंग स्रोतों की कॉमा-अलग सूची (user, project, local)]:sources:'
    '--plugin-dir[केवल इस सत्र के लिए प्लगइन लोड करने हेतु डायरेक्टरी (दोहराने योग्य)]:paths:_directories'
    '(-v --version)'{-v,--version}'[संस्करण संख्या आउटपुट करें]'
    '(-h --help)'{-h,--help}'[कमांड के लिए सहायता प्रदर्शित करें]'
  )

  _arguments -C \
    $main_options \
    '1: :->command' \
    '*::arg:->args'

  case $state in
    command)
      _describe -t commands 'claude commands' main_commands
      ;;
    args)
      case $words[1] in
        mcp)
          _claude_mcp
          ;;
        plugin)
          _claude_plugin
          ;;
        install)
          _claude_install
          ;;
        setup-token|doctor|update)
          _message "no arguments"
          ;;
      esac
      ;;
  esac
}

_claude_mcp() {
  local -a mcp_commands
  mcp_commands=(
    'serve:Claude Code MCP सर्वर प्रारंभ करें'
    'add:Claude Code में MCP सर्वर जोड़ें'
    'remove:MCP सर्वर हटाएं'
    'list:कॉन्फ़िगर किए गए MCP सर्वर की सूची बनाएं'
    'get:MCP सर्वर विवरण प्राप्त करें'
    'add-json:JSON स्ट्रिंग के साथ MCP सर्वर (stdio या SSE) जोड़ें'
    'add-from-claude-desktop:Claude Desktop से MCP सर्वर आयात करें (केवल Mac और WSL)'
    'reset-project-choices:इस प्रोजेक्ट में सभी स्वीकृत/अस्वीकृत प्रोजेक्ट-स्कोप्ड (.mcp.json) सर्वर रीसेट करें'
    'help:सहायता प्रदर्शित करें'
  )

  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments -C \
    '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
    '1: :->command' \
    '*::arg:->args'

  case $state in
    command)
      _describe -t commands 'mcp commands' mcp_commands
      ;;
    args)
      case $words[1] in
        serve)
          _arguments \
            '(-d --debug)'{-d,--debug}'[डीबग मोड सक्षम करें]' \
            '--verbose[कॉन्फ़िग फ़ाइल से verbose मोड सेटिंग ओवरराइड करें]' \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]'
          ;;
        add)
          _arguments \
            '(-s --scope)'{-s,--scope}'[कॉन्फ़िग स्कोप (local, user, project)]:scope:(local user project)' \
            '(-t --transport)'{-t,--transport}'[ट्रांसपोर्ट प्रकार (stdio, sse, http)]:transport:(stdio sse http)' \
            '(-e --env)'{-e,--env}'[एनवायरनमेंट वेरिएबल सेट करें (जैसे, -e KEY=value)]:env:' \
            '(-H --header)'{-H,--header}'[WebSocket हेडर सेट करें]:header:' \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:name:' \
            '2:commandOrUrl:' \
            '*:args:'
          ;;
        remove)
          _arguments \
            '(-s --scope)'{-s,--scope}'[कॉन्फ़िग स्कोप (local, user, project) - यदि अनिर्दिष्ट हो तो मौजूदा स्कोप से हटाएं]:scope:(local user project)' \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:name:_claude_mcp_servers'
          ;;
        list)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]'
          ;;
        get)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:name:_claude_mcp_servers'
          ;;
        add-json)
          _arguments \
            '(-s --scope)'{-s,--scope}'[कॉन्फ़िग स्कोप (local, user, project)]:scope:(local user project)' \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:name:' \
            '2:json:'
          ;;
        add-from-claude-desktop)
          _arguments \
            '(-s --scope)'{-s,--scope}'[कॉन्फ़िग स्कोप (local, user, project)]:scope:(local user project)' \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]'
          ;;
        reset-project-choices)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]'
          ;;
      esac
      ;;
  esac
}

_claude_plugin() {
  local -a plugin_commands
  plugin_commands=(
    'validate:प्लगइन या मार्केटप्लेस मैनिफेस्ट सत्यापित करें'
    'marketplace:Claude Code मार्केटप्लेस प्रबंधित करें'
    'install:उपलब्ध मार्केटप्लेस से प्लगइन इंस्टॉल करें'
    'i:उपलब्ध मार्केटप्लेस से प्लगइन इंस्टॉल करें (install का संक्षिप्त रूप)'
    'uninstall:इंस्टॉल किया गया प्लगइन अनइंस्टॉल करें'
    'remove:इंस्टॉल किया गया प्लगइन अनइंस्टॉल करें (uninstall का उपनाम)'
    'enable:निष्क्रिय प्लगइन सक्षम करें'
    'disable:सक्षम प्लगइन निष्क्रिय करें'
    'help:सहायता प्रदर्शित करें'
  )

  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments -C \
    '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
    '1: :->command' \
    '*::arg:->args'

  case $state in
    command)
      _describe -t commands 'plugin commands' plugin_commands
      ;;
    args)
      case $words[1] in
        validate)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:path:_files'
          ;;
        marketplace)
          _claude_plugin_marketplace
          ;;
        install|i)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:plugin:'
          ;;
        uninstall|remove)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:plugin:_claude_installed_plugins'
          ;;
        enable|disable)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:plugin:_claude_installed_plugins'
          ;;
      esac
      ;;
  esac
}

_claude_plugin_marketplace() {
  local -a marketplace_commands
  marketplace_commands=(
    'add:URL, पथ, या GitHub रिपॉजिटरी से मार्केटप्लेस जोड़ें'
    'list:कॉन्फ़िगर किए गए मार्केटप्लेस की सूची बनाएं'
    'remove:कॉन्फ़िगर किया गया मार्केटप्लेस हटाएं'
    'rm:कॉन्फ़िगर किया गया मार्केटप्लेस हटाएं (remove का उपनाम)'
    'update:स्रोत से मार्केटप्लेस अपडेट करें - यदि कोई नाम निर्दिष्ट न हो तो सभी अपडेट करें'
    'help:सहायता प्रदर्शित करें'
  )

  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments -C \
    '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
    '1: :->command' \
    '*::arg:->args'

  case $state in
    command)
      _describe -t commands 'marketplace commands' marketplace_commands
      ;;
    args)
      case $words[1] in
        add)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:source:'
          ;;
        list)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]'
          ;;
        remove|rm)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '1:name:'
          ;;
        update)
          _arguments \
            '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
            '::name:'
          ;;
      esac
      ;;
  esac
}

_claude_install() {
  _arguments \
    '--force[पहले से इंस्टॉल होने पर भी बलपूर्वक इंस्टॉल करें]' \
    '(-h --help)'{-h,--help}'[सहायता प्रदर्शित करें]' \
    '::target:(stable latest)'
}

(( $+_comps[claude] )) || compdef _claude claude
