#compdef claude

# Dynamic completion functions
_claude_mcp_servers() {
  local servers config_file
  local -a server_list

  # Read directly from config files instead of running 'claude mcp list'
  for config_file in ~/.claude/mcp.json ~/.claude.json ~/.config/claude/mcp.json; do
    [[ -f "$config_file" ]] || continue

    # Extract server names from JSON (mcpServers section)
    servers=$(grep -oP '(?<="mcpServers":\s*\{)[^}]+' "$config_file" 2>/dev/null | \
              grep -oP '(?<=")[^"]+(?="\s*:)' 2>/dev/null)

    [[ -n "$servers" ]] && server_list+=(${(f)servers})
  done

  # Fallback to claude mcp list if config parsing fails
  if [[ ${#server_list[@]} -eq 0 ]]; then
    server_list=(${(f)"$(claude mcp list 2>/dev/null | sed -n 's/^\([^:]*\):.*/\1/p' | grep -v '^Checking')"})
  fi

  _describe 'mcp servers' server_list
}

_claude_installed_plugins() {
  local -a plugins
  local config_file plugin_dir

  # Check plugin directories directly
  for plugin_dir in ~/.claude/plugins ~/.config/claude/plugins; do
    [[ -d "$plugin_dir" ]] || continue
    plugins+=(${plugin_dir}/*(N:t))
  done

  # Remove duplicates
  plugins=(${(u)plugins})

  _describe 'installed plugins' plugins
}

_claude_sessions() {
  local -a sessions
  local session_dir

  # Check session directory
  for session_dir in ~/.claude/sessions ~/.config/claude/sessions; do
    [[ -d "$session_dir" ]] || continue

    # Extract UUIDs directly from filenames
    sessions+=(${session_dir}/*~*.zwc(N:t:r))
  done

  # Filter only valid UUIDs
  sessions=(${(M)sessions:#[0-9a-f](#c8)-[0-9a-f](#c4)-[0-9a-f](#c4)-[0-9a-f](#c4)-[0-9a-f](#c12)})

  _describe 'session IDs' sessions
}

_claude() {
  local curcontext="$curcontext" state line
  typeset -A opt_args

  local -a main_commands
  main_commands=(
    'mcp:Διαμόρφωσην και διαχείρισην διακομιστών MCP'
    'plugin:Διαχείρισην πρόσθετων Claude Code'
    'migrate-installer:Μετεγκατάστασην από καθολικήν εγκατάστασην npm εις τοπικήν εγκατάστασην'
    'setup-token:Ρύθμισην μακροπρόθεσμου διακριτικού ελέγχου ταυτότητος (απαιτεί συνδρομήν Claude)'
    'doctor:Έλεγχον υγείας δια το αυτόματον ενημερωτικόν του Claude Code'
    'update:Έλεγχον και εγκατάστασην ενημερώσεων'
    'install:Εγκατάστασην εγγενούς εκδόσεως Claude Code'
  )

  local -a main_options
  main_options=(
    '(-d --debug)'{-d,--debug}'[Ενεργοποίησην λειτουργίας αποσφαλματώσεως με προαιρετικόν φιλτράρισμα κατηγοριών (π.χ. "api,hooks" ή "!statsig,!file")]:filter:'
    '--verbose[Παράκαμψην ρυθμίσεως λεπτομερούς λειτουργίας από το αρχείον διαμορφώσεως]'
    '(-p --print)'{-p,--print}'[Εκτύπωσην απαντήσεως και έξοδον (δια χρήσην με pipes). Σημείωσις: χρησιμοποιήσατε μόνον εις αξιοπίστους καταλόγους]'
    '--output-format[Μορφήν εξόδου (με --print): "text" (προεπιλογή), "json" (μεμονωμένον αποτέλεσμα), ή "stream-json" (ροήν εις πραγματικόν χρόνον)]:format:(text json stream-json)'
    '--json-schema[Σχήμα JSON δια επικύρωσην δομημένης εξόδου]:schema:'
    '--include-partial-messages[Συμπερίληψην τμημάτων μερικών μηνυμάτων καθώς φθάνουσιν (με --print και --output-format=stream-json)]'
    '--input-format[Μορφήν εισόδου (με --print): "text" (προεπιλογή) ή "stream-json" (είσοδον ροής εις πραγματικόν χρόνον)]:format:(text stream-json)'
    '--mcp-debug[Παρωχημένον. Χρησιμοποιήσατε --debug αντί τούτου] Ενεργοποίησην λειτουργίας αποσφαλματώσεως MCP (εμφανίζει σφάλματα διακομιστού MCP)]'
    '--dangerously-skip-permissions[Παράκαμψην πάντων των ελέγχων αδειών. Συνιστάται μόνον δια απομονωμένα περιβάλλοντα άνευ προσβάσεως εις το διαδίκτυον]'
    '--allow-dangerously-skip-permissions[Ενεργοποίησην επιλογής παρακάμψεως ελέγχων αδειών άνευ ενεργοποιήσεως από προεπιλογήν]'
    '--replay-user-messages[Επαναποστολήν μηνυμάτων χρήστου από stdin εις stdout δια επιβεβαίωσην]'
    '--allowed-tools[Κατάλογον διαχωρισμένον με κόμματα ή κενά με ονόμασιν επιτρεπομένων εργαλείων (π.χ. "Bash(git:*) Edit")]:tools:'
    '--allowedTools[Κατάλογον διαχωρισμένον με κόμματα ή κενά με ονόμασιν επιτρεπομένων εργαλείων (μορφήν camelCase)]:tools:'
    '--tools[Καθορισμόν καταλόγου διαθεσίμων εργαλείων από το ενσωματωμένον σύνολον. Μόνον λειτουργίαν εκτυπώσεως]:tools:'
    '--disallowed-tools[Κατάλογον διαχωρισμένον με κόμματα ή κενά με ονόμασιν μη επιτρεπομένων εργαλείων (π.χ. "Bash(git:*) Edit")]:tools:'
    '--disallowedTools[Κατάλογον διαχωρισμένον με κόμματα ή κενά με ονόμασιν μη επιτρεπομένων εργαλείων (μορφήν camelCase)]:tools:'
    '--mcp-config[Φόρτωσην διακομιστών MCP από αρχείον JSON ή συμβολοσειράν (διαχωρισμένα με κενά)]:configs:'
    '--system-prompt[Προτροπήν συστήματος δια χρήσην εις την συνεδρίαν]:prompt:'
    '--append-system-prompt[Προσάρτησην προτροπής συστήματος εις την προεπιλεγμένην προτροπήν συστήματος]:prompt:'
    '--permission-mode[Λειτουργίαν αδειών δια χρήσην εις την συνεδρίαν]:mode:(acceptEdits bypassPermissions default dontAsk plan)'
    '(-c --continue)'{-c,--continue}'[Συνέχισην της πλέον προσφάτου συνομιλίας]'
    '(-r --resume)'{-r,--resume}'[Συνέχισην συνομιλίας - καθορίσατε αναγνωριστικόν συνεδρίας ή επιλέξατε διαδραστικώς]:sessionId:_claude_sessions'
    '--fork-session[Δημιουργίαν νέου αναγνωριστικού συνεδρίας αντί επαναχρησιμοποιήσεως του αρχικού κατά την συνέχισην (με --resume ή --continue)]'
    '--model[Μοντέλον δια την τρέχουσαν συνεδρίαν. Καθορίσατε ψευδώνυμον δια το πλέον πρόσφατον μοντέλον (π.χ. '\''sonnet'\'' ή '\''opus'\'')]:model:'
    '--fallback-model[Ενεργοποίησην αυτομάτης εναλλακτικής λύσεως εις καθορισμένον μοντέλον όταν το προεπιλεγμένον μοντέλον είναι υπερφορτωμένον (μόνον --print)]:model:'
    '--settings[Διαδρομήν εις αρχείον JSON ρυθμίσεων ή συμβολοσειράν JSON δια φόρτωσην προσθέτων ρυθμίσεων]:file-or-json:_files'
    '--add-dir[Πρόσθετοι κατάλογοι δια επιτρεπομένην πρόσβασην εργαλείων]:directories:_directories'
    '--ide[Αυτομάτην σύνδεσην εις IDE κατά την εκκίνησην εάν υπάρχει ακριβώς εν έγκυρον IDE]'
    '--strict-mcp-config[Χρήσην μόνον διακομιστών MCP από --mcp-config και αγνόησην πάντων των άλλων ρυθμίσεων MCP]'
    '--session-id[Συγκεκριμένον αναγνωριστικόν συνεδρίας δια χρήσην εις την συνομιλίαν (πρέπει να είναι έγκυρον UUID)]:uuid:'
    '--agents[Αντικείμενον JSON το οποίον ορίζει προσαρμοσμένους πράκτορας]:json:'
    '--setting-sources[Κατάλογον διαχωρισμένον με κόμματα από πηγάς ρυθμίσεων δια φόρτωσην (user, project, local)]:sources:'
    '--plugin-dir[Κατάλογον δια φόρτωσην προσθέτων μόνον δια ταύτην την συνεδρίαν (επαναλαμβανόμενον)]:paths:_directories'
    '(-v --version)'{-v,--version}'[Εμφάνισην αριθμού εκδόσεως]'
    '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας δια εντολήν]'
  )

  _arguments -C \
    $main_options \
    '1: :->command' \
    '*::arg:->args'

  case $state in
    command)
      _describe -t commands 'claude commands' main_commands
      ;;
    args)
      case $words[1] in
        mcp)
          _claude_mcp
          ;;
        plugin)
          _claude_plugin
          ;;
        install)
          _claude_install
          ;;
        migrate-installer|setup-token|doctor|update)
          _message "no arguments"
          ;;
      esac
      ;;
  esac
}

_claude_mcp() {
  local -a mcp_commands
  mcp_commands=(
    'serve:Εκκίνησην διακομιστού MCP του Claude Code'
    'add:Προσθήκην διακομιστού MCP εις το Claude Code'
    'remove:Αφαίρεσην διακομιστού MCP'
    'list:Κατάλογον διαμορφωμένων διακομιστών MCP'
    'get:Λήψην λεπτομερειών διακομιστού MCP'
    'add-json:Προσθήκην διακομιστού MCP (stdio ή SSE) με συμβολοσειράν JSON'
    'add-from-claude-desktop:Εισαγωγήν διακομιστών MCP από το Claude Desktop (μόνον Mac και WSL)'
    'reset-project-choices:Επαναφοράν πάντων των εγκεκριμένων/απορριφθέντων διακομιστών εμβελείας έργου (.mcp.json) εις τούτο το έργον'
    'help:Εμφάνισην βοηθείας'
  )

  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments -C \
    '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
    '1: :->command' \
    '*::arg:->args'

  case $state in
    command)
      _describe -t commands 'mcp commands' mcp_commands
      ;;
    args)
      case $words[1] in
        serve)
          _arguments \
            '(-d --debug)'{-d,--debug}'[Ενεργοποίησην λειτουργίας αποσφαλματώσεως]' \
            '--verbose[Παράκαμψην ρυθμίσεως λεπτομερούς λειτουργίας από το αρχείον διαμορφώσεως]' \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]'
          ;;
        add)
          _arguments \
            '(-s --scope)'{-s,--scope}'[Εμβέλειαν διαμορφώσεως (local, user, project)]:scope:(local user project)' \
            '(-t --transport)'{-t,--transport}'[Τύπον μεταφοράς (stdio, sse, http)]:transport:(stdio sse http)' \
            '(-e --env)'{-e,--env}'[Ορισμόν μεταβλητής περιβάλλοντος (π.χ. -e KEY=value)]:env:' \
            '(-H --header)'{-H,--header}'[Ορισμόν κεφαλίδος WebSocket]:header:' \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:name:' \
            '2:commandOrUrl:' \
            '*:args:'
          ;;
        remove)
          _arguments \
            '(-s --scope)'{-s,--scope}'[Εμβέλειαν διαμορφώσεως (local, user, project) - αφαίρεσην από υπαρχούσαν εμβέλειαν εάν δεν καθορισθή]:scope:(local user project)' \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:name:_claude_mcp_servers'
          ;;
        list)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]'
          ;;
        get)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:name:_claude_mcp_servers'
          ;;
        add-json)
          _arguments \
            '(-s --scope)'{-s,--scope}'[Εμβέλειαν διαμορφώσεως (local, user, project)]:scope:(local user project)' \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:name:' \
            '2:json:'
          ;;
        add-from-claude-desktop)
          _arguments \
            '(-s --scope)'{-s,--scope}'[Εμβέλειαν διαμορφώσεως (local, user, project)]:scope:(local user project)' \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]'
          ;;
        reset-project-choices)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]'
          ;;
      esac
      ;;
  esac
}

_claude_plugin() {
  local -a plugin_commands
  plugin_commands=(
    'validate:Επικύρωσην προσθέτου ή δηλώσεως αγοράς'
    'marketplace:Διαχείρισην αγορών Claude Code'
    'install:Εγκατάστασην προσθέτου από διαθεσίμας αγοράς'
    'i:Εγκατάστασην προσθέτου από διαθεσίμας αγοράς (σύντομον μορφήν του install)'
    'uninstall:Απεγκατάστασην εγκατεστημένου προσθέτου'
    'remove:Απεγκατάστασην εγκατεστημένου προσθέτου (ψευδώνυμον του uninstall)'
    'enable:Ενεργοποίησην απενεργοποιημένου προσθέτου'
    'disable:Απενεργοποίησην ενεργοποιημένου προσθέτου'
    'help:Εμφάνισην βοηθείας'
  )

  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments -C \
    '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
    '1: :->command' \
    '*::arg:->args'

  case $state in
    command)
      _describe -t commands 'plugin commands' plugin_commands
      ;;
    args)
      case $words[1] in
        validate)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:path:_files'
          ;;
        marketplace)
          _claude_plugin_marketplace
          ;;
        install|i)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:plugin:'
          ;;
        uninstall|remove)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:plugin:_claude_installed_plugins'
          ;;
        enable|disable)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:plugin:_claude_installed_plugins'
          ;;
      esac
      ;;
  esac
}

_claude_plugin_marketplace() {
  local -a marketplace_commands
  marketplace_commands=(
    'add:Προσθήκην αγοράς από URL, διαδρομήν ή αποθετήριον GitHub'
    'list:Κατάλογον διαμορφωμένων αγορών'
    'remove:Αφαίρεσην διαμορφωμένης αγοράς'
    'rm:Αφαίρεσην διαμορφωμένης αγοράς (ψευδώνυμον του remove)'
    'update:Ενημέρωσην αγοράς από την πηγήν - ενημέρωσην πάντων εάν δεν καθορισθή όνομα'
    'help:Εμφάνισην βοηθείας'
  )

  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments -C \
    '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
    '1: :->command' \
    '*::arg:->args'

  case $state in
    command)
      _describe -t commands 'marketplace commands' marketplace_commands
      ;;
    args)
      case $words[1] in
        add)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:source:'
          ;;
        list)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]'
          ;;
        remove|rm)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '1:name:'
          ;;
        update)
          _arguments \
            '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
            '::name:'
          ;;
      esac
      ;;
  esac
}

_claude_install() {
  _arguments \
    '--force[Εξαναγκασμόν εγκαταστάσεως ακόμη κι αν είναι ήδη εγκατεστημένον]' \
    '(-h --help)'{-h,--help}'[Εμφάνισην βοηθείας]' \
    '::target:(stable latest)'
}

(( $+_comps[claude] )) || compdef _claude claude
